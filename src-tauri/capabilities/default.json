{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:app:allow-default-window-icon",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [
        {
          "path": "C:/ProgramData/Epic/EpicGamesLauncher/Data/Manifests/*"
        },
        {
          "path": "C:/ProgramData/Epic/EpicGamesLauncher/Data/Manifests"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [
        {
          "path": "$DATA/spitfire-launcher/**"
        },
        {
          "path": "$DATA/spitfire-launcher"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "**/Fortnite/FortniteGame/Binaries/Win64/FortniteLauncher.exe"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.epicgames.com"
        },
        {
          "url": "https://api.rookie-spitfire.xyz"
        }
      ]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "start-fortnite",
          "cmd": "cmd",
          "args": [
            "/c",
            "start",
            "FortniteLauncher.exe",
            "-AUTH_LOGIN=unused",
            {
              "validator": "-AUTH_PASSWORD=[a-z0-9]{32}"
            },
            "-AUTH_TYPE=exchangecode",
            "-epicapp=Fortnite",
            "-epicenv=Prod",
            "-EpicPortal",
            {
              "validator": "-epicuserid=[a-z0-9]{32}"
            }
          ]
        },
        {
          "name": "kill-fortnite",
          "cmd": "taskkill",
          "args": [
            "/IM",
            "FortniteClient-Win64-Shipping.exe",
            "/F"
          ]
        }
      ]
    },
    "clipboard-manager:default",
    {
      "identifier": "clipboard-manager:allow-write-text"
    },
    "os:default",
    "notification:default",
    "websocket:default"
  ]
}